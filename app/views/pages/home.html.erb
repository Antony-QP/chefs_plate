<div class="hp-main-container">

  <div class="homepage-banner align-items-end">
    <div class='home-banner-details'>
      <h1 class="banner-title">Connect with the most <br> inspirational chefs of today</h1>
        <div id="form">
            <input class="form-control-for-hp w-100 fs-1" type="search" placeholder="Search location...">
          <div class="icon-search">
            <a class="hp-search-button btn btn-info"><i class="fas fa-search"></i></a>
          </div>
        </div>
      <a class="btn btn-chefit" href="#">Chef it out!</a>
      <div class="arrow-hp">
        <i class="fas fa-chevron-down fa-3x arrow-hp"></i>
      </div>
    </div>
  </div>

<!-- First set of cards / Selection of 4 chefs -->

<div class="homepage-container">
  <h2 class ="h2-hp"><strong>Discover top inspirational chefs</strong></h2>
  <div class="homepage-cards">

  <% @chefs.each do |chef| %>
    <div class="homepage-card" style="width: 18rem;">
      <div class="homepage-card-image" style="background-image: url('https://images.pexels.com/photos/3814446/pexels-photo-3814446.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260')"></div>
      <div class="card-body">
        <h6 class="card-title"><span class="chef-names"><%= chef.first_name %> <%= chef.last_name %></span> <br> <%= chef.restaurant.name %></h6>
      </div>
    </div>
  <% end %>
</div>

