<div class="container">
    <h1 class="text-info">Welcome back <%= current_user.email.split('@')[0].capitalize %><span class="text-primary">...</span></h1>
    <div class="dashboard-grid-container p-5">
        <div class="icon-column">
            <div class="">
                <i class="fas fa-info-circle display-4 text-info"></i>
            </div>
           <div class="">
            <i class="fas fa-heart display-4 mt-5 text-info"></i>
           </div>
            <div class="">
                <i class="far fa-calendar-alt display-4 mt-5 text-info"></i>
            </div>
            <div><%= link_to "Bookings index", bookings_path, class: "bookings-table" %></div>
        </div>
        <div class="following-chef-grid">
            <% @followers.each do |follower| %>
            <% if follower.user_id == current_user.id  %>
            <div class="mr-2 ">
                <div class="d-flex mt-2">
                    <div
                    class="follower-image rounded"
                    style="
                      background-image: url('<%= cl_image_path follower.chef.photos[0].key, crop: :fill %>');
                    "
                  ></div>
                  <div class="w-100">
                      <%= link_to chef_path (follower.chef) do %>
                      <span class="font-weight-bold border-bottom chef-full-name text-info"><%= follower.chef.first_name %> <%= follower.chef.last_name %></span>
                    <% end %>
                    <span class="chef-restaurant text-info"><%= follower.chef.restaurant.name %></span>
                  </div>
                </div>
            </div>
            <% end  %>
            <% end  %>
        </div>
    </div>
</div>

