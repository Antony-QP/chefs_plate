<div class="container-post-card d-flex">
  
    
    <div id="chef-profile-picture" class="chef-card-img rounded" style="background-image: url('<%= cl_image_path @chef.photos[0].key, crop: :fill %>')"></div>
    <div class="container-post-card-items">
      <% @posts.each do |post| %>
        <div class="post-card d-flex">
          <div class="post-card-image"> <%= cl_image_tag post.photo.key, height: 100, width: 100, crop: :fill %>
          </div>
          <div class="post-card-desription"><p><%= post.description %></p>
          </div>
          <div class="post-card-posted"><p>Posted at: <%= post.created_at %></p>
          </div>
        </div>
      <% end  %> 
    </div>
</div>